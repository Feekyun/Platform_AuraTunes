<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:clipToPadding="false"
    tools:context=".YourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:paddingTop="0dp"> <!-- Pastikan ini 0 -->

        <!-- FrameLayout Banner -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profilbanner" />

            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="233dp"
                android:layout_height="71dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="34dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/greet" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_circle_pink"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notif_icn" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_circle_pink"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/history_icn" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_circle_pink"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/setting_icn" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_playlists"
            android:paddingStart="6dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            />

        <TextView
            android:id="@+id/artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Artists"
            android:visibility="invisible"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:paddingStart="22sp"
            android:textSize="22sp"
            android:fontFamily="@font/circularbold"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_albums"
            android:layout_width="match_parent"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hits of 2024"
            android:id="@+id/hits"
            android:paddingTop="25dp"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:paddingStart="22sp"
            android:textSize="22sp"
            android:fontFamily="@font/circularbold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hits24"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/mashup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20's Mashups"
            android:visibility="invisible"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:paddingStart="22sp"
            android:textSize="22sp"
            android:fontFamily="@font/circularbold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mashups20"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp" />


        <TextView
            android:id="@+id/hh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indian Hiphop"
            android:paddingTop="25dp"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:paddingStart="22sp"
            android:textSize="22sp"
            android:fontFamily="@font/circularbold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hiphop"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/rcy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended for You"
            android:paddingTop="25dp"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:paddingStart="22sp"
            android:textSize="22sp"
            android:fontFamily="@font/circularbold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rfy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="55dp"
            />
    </LinearLayout>
</ScrollView>
